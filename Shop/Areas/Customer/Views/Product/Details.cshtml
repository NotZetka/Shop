@using Shop.DataAccess.ViewModels
@model ProductVM

<form method="post">
    <input hidden asp-for="Product.Id" />
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Product.Name</h1>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-3 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Category : @Model.Product.Category.Name</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted">Price : @Model.Product.Price $</h5>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-muted"><h4>Amount</h4></div>
                                <div class="col-2"><input asp-for=Amount class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-area="Customer" asp-controller="Product" asp-action="Products" class="btn btn-outline-primary form-control " style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>

