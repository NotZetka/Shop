@using Shop.DataAccess.ViewModels
@model ProductVM


<div class="card  container pt-4">
    <div class="card-header bg-primary text-light ml-0  row ">
        <div class="col-12 col-md-6">
            <h1 class="text-white-50">@Model.Product.Name</h1>
        </div>
    </div>
    <div class="card-body row container">
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-3 col-lg-8">

                    <div class="row pl-2">
                    @if(Model.Product.Category != null)
                    {
                        <h5 class="text-muted">Category : @Model.Product.Category.Name </h5>
                    }
                    else
                    {
                        <h5 class="text-muted">Category : No category </h5>
                    }

                </div>
                    <div class="row pl-2">
                        <h5 class="text-muted">Price : @Model.Product.Price $</h5>
                    </div>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a asp-area="Customer" asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control ">Back to List</a>
            </div>
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-primary form-control" asp-controller="Cart" asp-action="Add" asp-route-productId=@Model.Product.Id>Add to card</a>
            </div>
        </div>
    </div>
</div>

