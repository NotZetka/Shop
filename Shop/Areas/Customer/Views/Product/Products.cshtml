@using Shop.DataAccess.Models
@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card">
                        <img height="400px" width = "400px" src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-secondary">@product.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title text-secondary">@product.Price $</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary form-control" asp-action="Details" asp-route-productId=@product.Id> Details</a>
                    </div>
                    <div>
                        <a class="btn btn-secondary form-control" asp-route-productId=@product.Id>Add to card</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
